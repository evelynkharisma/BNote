<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#E4E0D7">

<ImageView
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:id="@+id/imageView"
        android:src="@drawable/bnotes07"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

<EditText
    android:id="@+id/nim"
    android:layout_width="250dp"
    android:layout_height="40dp"
    android:hint="@string/prompt_nim"
    android:layout_marginTop="30dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/imageView"
    android:background="@drawable/edittextstyle"
    android:paddingStart="20dp"
    android:paddingEnd="10dp"
    android:textColor="@color/bnote_background" />

<EditText
    android:id="@+id/password"
    android:layout_width="250dp"
    android:layout_height="40dp"
    android:inputType="textPassword"
    android:ems="10"
    android:layout_below="@+id/nim"
    android:layout_alignEnd="@+id/nim"
    android:hint="@string/prompt_password"
    android:background="@drawable/edittextstyle"
    android:layout_marginTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="10dp"
    android:textColor="@color/bnote_background" />

<ImageButton
    android:id="@+id/nim_sign_in_button"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/icons11"
    android:layout_centerHorizontal="true"
    android:layout_alignTop="@+id/password"
    android:layout_marginTop="60dp" />


</RelativeLayout>