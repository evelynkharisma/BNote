<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bnote_background"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_open_note"
    tools:context="com.example.user.viewfiles.OpenNote">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        android:id="@+id/viewNote"
        android:background="@drawable/notes"
        />

    <ScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewNote"
        android:layout_margin="15dp"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_notes"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:background="@drawable/bnotes07"/>

                    <TextView
                        android:layout_width="1250dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Teylor Suwift"
                        android:textStyle="bold"
                        android:id="@+id/textView" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="right|top"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="0.24">

                    <Button
                        android:id="@+id/circle_14"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/icon14"/>

                    <Button
                        android:id="@+id/circle_15"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/icon15"/>

                    <Button
                        android:id="@+id/circle_16"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/icon16"/>

                    <Button
                        android:id="@+id/circle_17"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/icon17"/>

                    <Button
                        android:id="@+id/circle_18"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/icon18"/>

                    <Button
                        android:id="@+id/circle_19"
                        android:layout_width="30dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/icon19"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_note_description"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="Sequential Art - Comic Making Philosphy..."
                android:textSize="13dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
